# Nile Pay Production Environment Variables
# Copy this file to .env.production and fill in your production values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=production
NEXT_PUBLIC_APP_NAME="Nile Pay"
NEXT_PUBLIC_APP_DESCRIPTION="Ethiopian Digital Banking Platform"
NEXT_PUBLIC_APP_URL=https://nilepay.et
NEXT_PUBLIC_API_URL=https://api.nilepay.et

# =============================================================================
# SUPABASE CONFIGURATION (Production)
# =============================================================================
# Get these from your Supabase project dashboard
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Database URL for direct connections (if needed)
DATABASE_URL=postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# JWT Secret for additional security (generate a strong random string)
JWT_SECRET=your-super-secure-jwt-secret-here

# Session configuration
SESSION_SECRET=your-session-secret-here
SESSION_TIMEOUT=3600000

# Encryption keys for sensitive data
ENCRYPTION_KEY=your-32-character-encryption-key-here
HASH_SALT_ROUNDS=12

# =============================================================================
# ETHIOPIAN BANKING INTEGRATION
# =============================================================================
# Commercial Bank of Ethiopia API
CBE_API_URL=https://api.combanketh.et
CBE_API_KEY=your-cbe-api-key
CBE_API_SECRET=your-cbe-api-secret

# Dashen Bank API
DASHEN_API_URL=https://api.dashenbanksc.com
DASHEN_API_KEY=your-dashen-api-key
DASHEN_API_SECRET=your-dashen-api-secret

# Bank of Abyssinia API
BOA_API_URL=https://api.bankofabyssinia.com
BOA_API_KEY=your-boa-api-key
BOA_API_SECRET=your-boa-api-secret

# Awash Bank API
AWASH_API_URL=https://api.awashbank.com
AWASH_API_KEY=your-awash-api-key
AWASH_API_SECRET=your-awash-api-secret

# =============================================================================
# MOBILE MONEY INTEGRATION
# =============================================================================
# M-Birr Integration
MBIRR_API_URL=https://api.mbirr.et
MBIRR_MERCHANT_ID=your-mbirr-merchant-id
MBIRR_API_KEY=your-mbirr-api-key
MBIRR_SECRET_KEY=your-mbirr-secret-key

# HelloCash Integration
HELLOCASH_API_URL=https://api.hellocash.et
HELLOCASH_MERCHANT_ID=your-hellocash-merchant-id
HELLOCASH_API_KEY=your-hellocash-api-key

# =============================================================================
# PAYMENT PROCESSING
# =============================================================================
# Ethiopian Payment Gateway
ETH_PAYMENT_GATEWAY_URL=https://gateway.ethiopianpayments.et
ETH_PAYMENT_GATEWAY_KEY=your-payment-gateway-key
ETH_PAYMENT_GATEWAY_SECRET=your-payment-gateway-secret

# Transaction limits (in ETB)
MAX_DAILY_TRANSACTION_LIMIT=100000
MAX_SINGLE_TRANSACTION_LIMIT=50000
MIN_TRANSACTION_AMOUNT=1

# =============================================================================
# NOTIFICATION SERVICES
# =============================================================================
# Email service (using Ethiopian email provider)
SMTP_HOST=mail.ethionet.et
SMTP_PORT=587
SMTP_USER=noreply@nilepay.et
SMTP_PASSWORD=your-smtp-password
SMTP_FROM_EMAIL=noreply@nilepay.et
SMTP_FROM_NAME="Nile Pay"

# SMS service (Ethiopian SMS provider)
SMS_PROVIDER_URL=https://api.ethiopiansms.et
SMS_API_KEY=your-sms-api-key
SMS_SENDER_ID=NilePay

# Push notifications
PUSH_NOTIFICATION_KEY=your-push-notification-key

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
# Application monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ORG=your-org
SENTRY_PROJECT=nile-pay

# Analytics (if using Google Analytics)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Performance monitoring
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key
NEW_RELIC_APP_NAME="Nile Pay Production"

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Ethiopian National ID verification service
NATIONAL_ID_VERIFICATION_URL=https://api.ethiopianid.gov.et
NATIONAL_ID_API_KEY=your-national-id-api-key

# Ethiopian Revenue and Customs Authority integration
ERCA_API_URL=https://api.erca.gov.et
ERCA_API_KEY=your-erca-api-key

# National Bank of Ethiopia compliance
NBE_REPORTING_URL=https://reporting.nbe.gov.et
NBE_API_KEY=your-nbe-api-key

# =============================================================================
# FILE STORAGE & CDN
# =============================================================================
# Supabase Storage (for documents, images)
NEXT_PUBLIC_SUPABASE_STORAGE_URL=https://your-project.supabase.co/storage/v1

# CDN for static assets (if using external CDN)
CDN_URL=https://cdn.nilepay.et

# =============================================================================
# RATE LIMITING & SECURITY
# =============================================================================
# Rate limiting configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS configuration
CORS_ORIGIN=https://nilepay.et,https://www.nilepay.et

# =============================================================================
# LOGGING & DEBUGGING
# =============================================================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable/disable debug mode
DEBUG=false

# Log retention (days)
LOG_RETENTION_DAYS=30

# =============================================================================
# BACKUP & DISASTER RECOVERY
# =============================================================================
# Database backup configuration
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_URL=s3://your-backup-bucket

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features
FEATURE_QR_PAYMENTS=true
FEATURE_MOBILE_MONEY=true
FEATURE_INTERNATIONAL_TRANSFERS=false
FEATURE_CRYPTO_PAYMENTS=false
FEATURE_LOAN_APPLICATIONS=false

# =============================================================================
# COMPLIANCE & REGULATORY
# =============================================================================
# KYC (Know Your Customer) settings
KYC_VERIFICATION_REQUIRED=true
KYC_DOCUMENT_RETENTION_YEARS=7

# AML (Anti-Money Laundering) settings
AML_MONITORING_ENABLED=true
AML_SUSPICIOUS_AMOUNT_THRESHOLD=50000

# Data retention policies
USER_DATA_RETENTION_YEARS=7
TRANSACTION_DATA_RETENTION_YEARS=10

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
# Vercel specific (if deploying to Vercel)
VERCEL_URL=nilepay.vercel.app
VERCEL_ENV=production

# Health check configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================
# Currency exchange rates (for international features)
EXCHANGE_RATE_API_URL=https://api.exchangerate-api.com/v4/latest/ETB
EXCHANGE_RATE_API_KEY=your-exchange-rate-api-key

# Geolocation services (for fraud detection)
GEOLOCATION_API_URL=https://api.ipgeolocation.io
GEOLOCATION_API_KEY=your-geolocation-api-key

# =============================================================================
# MAINTENANCE MODE
# =============================================================================
# Enable maintenance mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="Nile Pay is currently undergoing scheduled maintenance. We'll be back shortly."
MAINTENANCE_END_TIME="2024-12-31T23:59:59Z"
